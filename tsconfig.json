{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./cache"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"],
  "paths": {
    "@user/*": ["./src/user/*"]
  }
}
